{
    "compilerOptions": {
        /* File Layout */
        "rootDir": "src",
        "outDir": "dist",

        /* Environment */
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],
        "allowJs": true,

        /* Output options */
        "sourceMap": true,
        "declaration": true,

        /* Strict type checking */
        "strict": true,
        "skipLibCheck": true,

        /* Recommended developer options */
        "noImplicitAny": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/test/lift.test.ts", "src/test/app_user.test.ts"],
    "exclude": ["node_modules", "dist", "**/*.config.js"]
}